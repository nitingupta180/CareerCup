<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/answer_card" >

        <TextView
            android:id="@+id/tvNetVotes"
            style="@style/CardTextSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rlAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvNetVotes" >

            <TextView
                android:id="@+id/tvAnswerText"
                style="@style/CardTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp" />

            <TextView
                android:id="@+id/tvPostingDetails"
                style="@style/CardTextSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAnswerText"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
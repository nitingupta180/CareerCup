<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActionBarTitleStyle">
        <item name="android:textColor">@color/cc_actionbar_title_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionBarSubtitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cc_actionbar_subtitle_color</item>
    </style>

    <style name="CCTextDrawerNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/cc_actionbar_title_color</item>
    </style>

    <style name="CardTextPrimary">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="CardTextSecondary">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

</resources>